/* pages/Video/Video.wxss */
page{
  background:#fff;
}
.free-danmu{
  width:100%;
}
.free-panel{
  width:100%;
}
.free-video-common{
  width:100%;
}
video{
  width:100%;
}
.free-danmu input{
  display: inline-block;
}
.free-danmu-input{
  width:71%;
  height:30px;
  font-size:14px;
  border:1px solid #aaa;
  padding-left:2%;
  margin:0 2%;
  border-radius: 5px;
  display: inline-block;
}
.free-danmu-btn{
  width:20%;
  height:30px;
  font-size:14px;
  line-height: 30px;
  background:#48c23d;
  color:#fff;
  padding:0% 1%;
  margin:0% 0%;
  border-radius: 5px;
  display: inline-block;
}
.free-danmu-btn::after{
  border:none;
}

.wenzhang{
  width:100%;
}
/*文章内容*/
.free-title{
  padding:2% 1%;
  font-size:22px;
  font-weight: bold;
  color:#000;
  margin-bottom:10px;
}
/*footer*/
.flex-footer{
  height:30px;
  line-height: 30px;
  font-size:12px;
  color:#b2b2b2;
  display: flex;
  flex-flow: row;
}
 .flex-footer view{
  display: inline-block;
  width:48%;
}
 .flex-footer .footer-left{
  padding-left:2%;
}
.flex-footer .footer-left text{
  display: inline-block;
  margin:0 5% 0 0;
}
 .flex-footer .footer-left text.iconfont{
  margin:0 1% 0 2%;
}
 .flex-footer .footer-right{
  text-align: right;
  padding-right:2%;
 }

 /*内容*/
 .content{
   font-size:18px;
   padding:2% 1%;
   color:#000;
   margin-bottom:15%;
   line-height: 25px
 }
/*专区*/
.zone{
  width:100%;
  display:flex;
  flex-flow: row;
  color:#000;
  font-size:20px;
  position: fixed;
  bottom:0px;
  right:0px;
  left:0px;
  background:#fff;
  border-top:1px solid #eee;
}
.zone form{
  width:100%;
}
.zone button{
  display: inline-block;
  width:33.33%;
  color:#000;
  text-align: center;
  padding:0px !important;
  background:#fff;
}
.zone button text{
  font-size:20px;
}
.zone button::after{
  border:none;
}
.zanfirst-icon{
  font-size:10px;
  display:inline-block;
  margin-left:5px;
  color:red;
}


.bofangview{
  width:100%;
  height:60%;
  margin:0% auto 0px;
}
.play{
  width:100%;
  height:100%;
  text-align: center;
  position: relative;
}
cover-image{
  width:8%;
  position: absolute;
  bottom:0px;
  left:47.5%;
}