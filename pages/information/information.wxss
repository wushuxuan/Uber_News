/* pages/personal/personal.wxss */
.weui-navbar{
  background:#fff;
  position:fixed;
  top:0px;
}
.weui-tab__content{
  margin-top:3%;
}
.weui-tab__content .flex-wrap .flex-title{
  padding:3% 2% 0%;
  font-size:16px;
  font-weight: bold;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  word-wrap: normal;
}
.weui-tab__content .flex-wrap{
  width:95%;
  background:#fff;
  border-radius: 10px;
  margin:0 auto 5%;
  overflow: hidden;
  box-shadow: 0px 0px 5px #ddd;
}
.weui-tab__content .flex-wrap .flex-head{
  height:50px;
  line-height: 50px;
  width:100%;
  display: flex;
  flex-flow: row;
}
.weui-tab__content .flex-wrap .head-img{
  width:35px;
  height:35px;
  margin:7.5px;
}
.weui-tab__content .flex-wrap .head-img image{
  width:100%;
  height:100%;
  border-radius: 50%
}
.weui-tab__content .flex-wrap .head-texts{
  height:50px;
  display: flex;
  flex-flow: column;
}
.weui-tab__content .flex-wrap .head-texts view{
  height:25px;
  line-height: 30px;
  font-size:12px;
  color:#b2b2b2;
}
.weui-tab__content .flex-wrap .head-texts view.name{
  font-size:14px;
  line-height: 35px;
  color:#333;
  font-weight: bold;
}
.weui-tab__content .flex-wrap .flex-content{
  width:100%;
  height:180px;
  background:#fff;
}
.weui-tab__content .flex-wrap .flex-content image{
  width:100%;
  height:180px;
}
.weui-tab__content .flex-wrap .flex-content{
  position: relative;
}
.weui-tab__content .flex-wrap .flex-content video{
  width:100%;
  height:180px;
  border-radius:10px 10px 0px 0px !important;
}
.weui-tab__content .flex-wrap .flex-footer{
  height:30px;
  line-height: 30px;
  font-size:12px;
  color:#b2b2b2;
  display: flex;
  flex-flow: row;
}
.weui-tab__content .flex-wrap .flex-footer view{
  display: inline-block;
  width:48%;
}
.weui-tab__content .flex-wrap .flex-footer .footer-left{
  padding-left:2%;
}
.weui-tab__content .flex-wrap .flex-footer .footer-left text{
  display: inline-block;
  margin:0 5% 0 0;
}
.weui-tab__content .flex-wrap .flex-footer .footer-left text.iconfont{
  margin:0 1% 0 2%;
}
.weui-tab__content .flex-wrap .flex-footer .footer-right{
  text-align: right;
  padding-right:2%;
}

/*简介*/
.flex-Introduction{
  padding:3% 2% 0%;
  font-size:12px;
  color:#707070;
  margin:0px auto 20px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
}



.bofangview{
  width:100%;
  height:60%;
  margin:0% auto 0px;
}
cover-image{
  width:8%;
